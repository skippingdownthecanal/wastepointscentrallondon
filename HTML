<body>
  <div id="map"></div>

  <script src="https://unpkg.com/leaflet@1.9.3/dist/leaflet.js"></script>
  <script>
    const map = L.map('map').setView([51.509865, -0.118092], 13); // Central London

    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
      attribution: 'Â© OpenStreetMap contributors'
    }).addTo(map);

    // Example: Replace with actual bin location data
    const wasteBins = [
      { lat: 51.5135, lng: -0.1360, description: "Bin near Oxford Circus" },
      { lat: 51.5074, lng: -0.1278, description: "Bin near Trafalgar Square" }
    ];

    wasteBins.forEach(bin => {
      L.marker([bin.lat, bin.lng])
        .addTo(map)
        .bindPopup(bin.description);
    });
  </script>
